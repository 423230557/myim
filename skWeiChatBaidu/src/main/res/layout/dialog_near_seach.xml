<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_for_shatup"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv1"
            android:layout_centerInParent="true"
            android:layout_marginLeft="-51dp"
            android:background="@mipmap/default_check"
            android:paddingRight="@dimen/dp10"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="9dp"
            android:text="@string/near_all"
            android:textColor="@color/black"
            android:textSize="@dimen/one_level_title" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv2"
            android:layout_centerInParent="true"
            android:layout_marginLeft="-57dp"
            android:background="@mipmap/default_check"
            android:paddingRight="@dimen/dp10"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="9dp"
            android:text="@string/near_male"
            android:textColor="@color/black"
            android:textSize="@dimen/one_level_title" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv3"
            android:layout_centerInParent="true"
            android:layout_marginLeft="-57dp"
            android:background="@mipmap/default_check"
            android:paddingRight="@dimen/dp10"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="9dp"
            android:text="@string/near_famale"
            android:textColor="@color/black"
            android:textSize="@dimen/one_level_title" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector_background_ripple"
        android:gravity="center"
        android:padding="9dp"
        android:text="@string/near_cancel"
        android:textColor="@color/black"
        android:textSize="@dimen/one_level_title" />

</LinearLayout>